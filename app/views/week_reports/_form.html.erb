<div class="text-center timeout">
	<%= form_for(@week_report) do |f| %>
		<% if @week_report.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@week_report.errors.count, "error") %> prohibited this week_report from being saved:</h2>
				<ul>
					<% @week_report.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="form-group col-md-6 col-md-offset-3">
			<%= f.label :プロジェクト %>
			<%= f.collection_select :project_id, Project.all.order(:code), :id, :project_id_and_name, {:selected => @project},{class: "form-control"} %>
		</div>
		<div class="form-group col-md-6 col-md-offset-3">
			<%= f.label :やったこと %>
			<%= f.text_area :done, :rows => "8", class: "form-control", required: true %>
		</div>
		<div class="form-group col-md-6 col-md-offset-3">
			<%= f.label :わかったこと %>
			<%= f.text_area :understood, :rows => "8", class: "form-control", required: true %>
		</div>
		<div class="form-group col-md-6 col-md-offset-3">
			<%= f.label :つぎやること %>
			<%= f.text_area :next, :rows => "8", class: "form-control", required: true %>
		</div>
		<div class="form-group">
			<%= f.hidden_field :start_day, value: @start_day %>
		</div>
		<div class="actions col-md-6 col-md-offset-3">
			<%= f.submit "登録する", class: "btn btn-primary btn-lg btn-block  m-top m-bottom" %>
			<%= link_to "前に戻る", {controller:"week_reports", action:"index", date:@dt, name:'new'}, class:"btn btn-danger btn-lg btn-block m-bottom" %>
		</div>
	<% end %>
</div>
