<div class="row">
	<div class="col-xs-12">
		<h4 class="text-center">
			<%= render 'user_info' %>の週報
		</h4>
		<h4 class="text-center timeout" style="display:none;">
			<%= render 'week_display' %>
		</h4>
			<div class="text-center">
				<%= link_to "前の週へ",{controller:"week_reports", action:"change_week",start:@start_day - 1.week}, class: "btn btn-info btn-lg" %>
				<%= link_to "週報を追加する",{controller:"week_reports", action:"new", start:@start_day},class: "btn btn-success btn-lg" %>
				<%= link_to "次の週へ",{controller:"week_reports", action:"change_week",start:@start_day + 1.week}, class: "btn btn-info btn-lg" %>
			</div>
		<!--週報の中身が出力されます-->
		<table class="table col-xs-12">
			<thead>
				<tr>
					<th class="col-xs-2">プロジェクト</th>
					<th class="col-xs-3">やったこと</th>
					<th class="col-xs-3">わかったこと</th>
					<th class="col-xs-3">つぎやること</th>
					<th class="col-xs-1">操作</th>
				</tr>
			</thead>
			<tbody class="timeout" style="display:none;">
			<%= render partial: 'report' %>
			</tbody>
		</table>
	</div>
</div>