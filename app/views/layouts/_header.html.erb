<header>
	<!-- Fixed navbar -->
	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%= link_to "WEEK REPORTS APP", root_path, id: "logo",class: "navbar-brand" %>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<div class="btn-group p-top textsizer" data-toggle="buttons">
						<label class="btn btn-default active f-small">
							<input type="radio" name="options" checked>S
						</label>
						<label class="btn btn-default f-medium">
							<input type="radio" name="options">M
						</label>
						<label class="btn btn-default f-big">
							<input type="radio" name="options">L
						</label>
					</div>

				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "ホーム", root_path %></li>
					<!--<li><%= link_to "開発室", root_path %></li>-->
					<% if signed_in? %>
					<li><%= link_to "一覧",{controller:"all_reports", action:"index"} %></li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">メニュー <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to "パスワード変更", {controller:"user_settings", action:"edit", id:current_user.id} %></li>
							<li class="divider"></li>
							<% if current_user.admin? %>
							<li><%= link_to "ユーザー管理", {controller:"users", action:"index", id:current_user.id} %></li>
							<li class="divider"></li>
							<li><%= link_to "プロジェクト管理", {controller:"projects", action:"index", id:current_user.id} %></li>
							<li class="divider"></li>
							<% else %>
							<% end %>
							<li><%= link_to "サインアウト", signout_path, method: "delete" %></li>
						</ul>
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">外観 <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li class="back-1"><a href="#">アート</a></li>
							<li class="divider"></li>
							<li class="back-2"><a href="#">犬</a></li>
							<li class="divider"></li>
							<li class="back-3"><a href="#">マッターホルン</a></li>
							<li class="divider"></li>
							<li class="back-4"><a href="#">猫</a></li>
							<li class="divider"></li>
							<li class="back-off"><a href="#">シンプル</a></li>
						</ul>
					</li>
					<% else %>
					<li><%= link_to "サインイン", signin_path %></li>
					<% end %>
				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</div>
			<% flash.each do |key, value| %>
			<div class="bg-<%= key %> al-bar text-<%= key %> text-center timeout" style="display:none;"><%= value %></div>
			<% end %>
					<script>
						var storage = sessionStorage;
						$(function(){
							switch(storage.getItem('font-size')){
								case '12':
									$("body").css("font-size","12px");
									$(".f-small").addClass("active");
									$(".f-medium").removeClass("active");
									$(".f-big").removeClass("active");
									break;
								case '16':
									$("body").css("font-size","16px");
									$(".f-small").removeClass("active");
									$(".f-medium").addClass("active");
									$(".f-big").removeClass("active");
									break;
								case '20':
									$("body").css("font-size","20px");
									$(".f-small").removeClass("active");
									$(".f-medium").removeClass("active");
									$(".f-big").addClass("active");
									break;
								default:
									break;
							}
						});
					</script>
					<script>
						var storage = sessionStorage;
						$(".f-small").click(function(){
							$("body").css("font-size","12px");
							storage.setItem('font-size', '12');
						});
						$(".f-medium").click(function(){
							$("body").css("font-size","16px");
							storage.setItem('font-size', '16');
						});
						$(".f-big").click(function(){
							$("body").css("font-size","20px");
							storage.setItem('font-size', '20');
						});
					</script>
				<script>
					var storage = sessionStorage;
					$(function(){
						switch(storage.getItem('background')){
							case '1':
								$("html").css("background","#fff url(/assets/back.jpg) no-repeat fixed top center");
								$("body").css("background-color","rgba(51,51,51,0.6)").css("color","#fff");
								break;
							case '2':
								$("html").css("background","#fff url(/assets/back2.jpg) no-repeat fixed top center");
								$("body").css("background-color","rgba(51,51,51,0.6)").css("color","#fff");
								break;
							case '3':
								$("html").css("background","#fff url(/assets/back3.jpg) no-repeat fixed top center");
								$("body").css("background-color","rgba(51,51,51,0.6)").css("color","#fff");
								break;
							case '4':
								$("html").css("background","#fff url(/assets/back4.jpg) no-repeat fixed top center");
								$("body").css("background-color","rgba(51,51,51,0.6)").css("color","#fff");
								break;
							case 'off':
								$("html").css("background","#fff none no-repeat fixed top center");
								$("body").css("background-color","#fff").css("color","#555");
								break;
							default:
								break;
						}
					});
				</script>
				<script>
					var storage = sessionStorage;
					$(".back-1").click(function(){
						$("html").css("background","#fff url(/assets/back.jpg) no-repeat fixed top center");
						$("body").css("background-color","rgba(51,51,51,0.6)").css("color","#fff");
						storage.setItem('background', '1');
					});
					$(".back-2").click(function(){
						$("html").css("background","#fff url(/assets/back2.jpg) no-repeat fixed top center");
						$("body").css("background-color","rgba(51,51,51,0.6)").css("color","#fff");
						storage.setItem('background', '2');
					});
					$(".back-3").click(function(){
						$("html").css("background","#fff url(/assets/back3.jpg) no-repeat fixed top center");
						$("body").css("background-color","rgba(51,51,51,0.6)").css("color","#fff");
						storage.setItem('background', '3');
					});
					$(".back-4").click(function(){
						$("html").css("background","#fff url(/assets/back4.jpg) no-repeat fixed top center");
						$("body").css("background-color","rgba(51,51,51,0.6)").css("color","#fff");
						storage.setItem('background', '4');
					});
					$(".back-off").click(function(){
						$("html").css("background","#fff none no-repeat fixed top center");
						$("body").css("background-color","#fff").css("color","#555");
						storage.setItem('background', 'off');
					});
				</script>
</header>