<h4 class="text-center m-bottom">ログインしましょう</h4>

<div class="row m-bottom timeout" style="display:none;">
	<div class="text-center col-md-4 col-md-offset-4">
		<%= form_for(:session, url: sessions_path) do |f| %>
		<%= f.label :社員番号 %>
		<%= f.text_field :worker_num, class: "form-control text-center" %>
		<%= f.label :パスワード %>
		<%= f.password_field :password, class: "form-control text-center" %>
		<%= f.submit "ログイン", class: "btn btn-lg btn-primary col-xs-12 m-bottom m-top" %>
		<% end %>
	</div>
</div>
