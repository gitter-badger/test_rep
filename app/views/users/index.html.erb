<div class="row">
	<h3 class="text-center m-bottom">ユーザー一覧</h3>
	<section class="text-center">
		<%= link_to 'ユーザーを追加する', new_user_path, class: "btn btn-success btn-lg" %>
	</section>
	<table class="table">
		<thead>
			<tr>
				<th>社員番号</th>
				<th>名前</th>
				<th>グループ</th>
				<th>管理者権限</th>
				<th>操作</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.worker_num %></td>
				<td><%= user.name %></td>
				<td><%= user.user_group.try(:name) %></td>
				<td><%= user.admin %></td>
				<td>
					<%= link_to '編集する', edit_user_path(user), class: "btn btn-primary" %>
					<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal<%= user.id %>">削除する</button>
					<div class="modal fade" id="modal<%= user.id %>" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-body">本当に削除しますか？</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
									<%= link_to '削除', user, method: :delete, class: "btn btn-danger" %>
								</div>
							</div>
						</div>
					</div>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<br>
</div>