<div class="row">
	<h3 class="text-center m-bottom">ユーザー一覧</h3>
	<section class="text-center">
		<%= link_to 'ユーザーを追加する', new_user_path, class: "btn btn-success" %>
	</section>
	<table class="table">
		<thead>
			<tr>
				<th>社員番号</th>
				<th>名前</th>
				<th>グループ</th>
				<th>操作</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.worker_num %></td>
				<td><%= user.name %></td>
				<td><%= user.group.try(:name) %></td>
				<td>
					<%= link_to '編集する', edit_user_path(user), class: "btn btn-primary" %>
					<%= link_to '削除する', user, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<br>
</div>