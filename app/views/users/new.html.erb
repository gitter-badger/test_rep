<h4 class="text-center">新しいユーザーを登録しましょう</h4>

<div class="row m-bottom">
	<div class="text-center col-md-4 col-md-offset-4">
		<%= form_for(@user) do |f| %>
			<%= render 'error_messages' %>
			<%= f.label :worker_num, "社員番号" %>
			<%= f.text_field :worker_num, class: "form-control text-center text-center", required: true %>
			<%= f.label :name, "名前" %>
			<%= f.text_field :name, class: "form-control text-center", required: true %>
			<%= f.label :group_id, "グループ" %>
			<%= f.collection_select :group_id, Group.all.order(:id), :id, :name, {:include_blank => "グループ無し",:selected => @project}, {class: "form-control text-center"} %>
			<%= f.label :password, "パスワード" %>
			<%= f.password_field :password, class: "form-control text-center", required: true %>
			<%= f.label :password_confirmation, "パスワード確認" %>
			<%= f.password_field :password_confirmation, class: "form-control text-center", required: true %>
			<%= f.submit "作成する", class: "btn btn-lg btn-primary btn-block m-bottom" %>
			<%= link_to '前に戻る', users_path, class: "btn btn-lg btn-danger btn-block" %>
	<% end %>
</div>
