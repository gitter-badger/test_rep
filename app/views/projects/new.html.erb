<h4 class="text-center m-bottom">新しいプロジェクトをつくりましょう</h4>

<div class="row">
	<div class="text-center col-md-4 col-md-offset-4">
		<%= form_for(@project) do |f| %>
		<%= render 'error_messages' %>
		<%= f.label :code, "コード" %>
		<%= f.text_field :code, class: "form-control text-center text-center" %>
		<%= f.label :name, "プロジェクト名" %>
		<%= f.text_field :name, class: "form-control text-center" %>
		<%= f.submit "作成する", class: "btn btn-lg btn-primary col-xs-12 m-bottom m-top" %>
		<%= link_to '前に戻る', projects_path, class: "btn btn-lg btn-danger col-xs-12 m-bottom m-top" %>
		<% end %>
	</div>
</div>

