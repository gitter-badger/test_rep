<h4 class="text-center m-bottom">プロジェクトの情報を更新しましょう</h4>

<div class="row">
	<div class="text-center col-md-4 col-md-offset-4">
		<%= form_for(@project) do |f| %>
			<%= render 'error_messages' %>
			<%= f.label :code, "コード" %>
			<%= f.text_field :code, class: "form-control text-center", required: true %>
			<%= f.label :name, "プロジェクト名" %>
			<%= f.text_field :name, class: "form-control text-center", required: true %>
			<%= f.submit "更新する", class: "btn btn-lg btn-primary btn-block m-bottom" %>
			<%= link_to '前に戻る', projects_path, class: "btn btn-lg btn-danger btn-block" %>
		<% end %>
	</div>
</div>
