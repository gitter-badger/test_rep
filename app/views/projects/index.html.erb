<div class="row">
	<h3 class="text-center m-bottom">プロジェクト一覧</h3>
	<section class="text-center">
		<%= link_to 'プロジェクトを追加する', new_project_path, class: "btn btn-success col-md-4 col-md-offset-4" %>
	</section>
	<table class="table">
		<thead>
			<tr>
				<th>コード</th>
				<th>プロジェクト名</th>
				<th>更新日時</th>
				<th>操作</th>
			</tr>
		</thead>
		<tbody>
			<% @projects.each do |project| %>
			<tr>
				<td><%= project.code %></td>
				<td><%= project.name %></td>
				<td><%= project.updated_at %></td>
				<td>
					<%= link_to '編集する', edit_project_path(project), class: "btn btn-primary" %>
					<%= link_to '削除する', project, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<br>
</div>
